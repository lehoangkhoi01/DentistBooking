@page
@model DentistBookingWebApp.Pages.Services.DetailsModel
@{
    ViewData["Title"] = "Detail";
}


<h1>Details</h1>

<div>
    <h4>Service</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.serviceViewModel.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.serviceViewModel.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.serviceViewModel.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.serviceViewModel.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.serviceViewModel.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.serviceViewModel.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.serviceViewModel.Image)
        </dt>
        <dd class="col-sm-10">
            <img src="~/images/@Model.serviceViewModel.Image" alt="@Model.serviceViewModel.Image" height="200" width="200"/>
        </dd>
    </dl>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
    @if(!string.IsNullOrEmpty(Model.Role) && Model.Role.ToLower() == "admin")
    {
        <a asp-page="./Edit" asp-route-id="@Model.serviceViewModel.Id">Edit |</a>
        <form method="post" asp-page-handler="Delete">
            <input name="serviceId" value="@Model.serviceViewModel.Id" type="hidden"/>
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    }
    else
    {
        <a href="#">Booking appoitment</a>
    }
</div>