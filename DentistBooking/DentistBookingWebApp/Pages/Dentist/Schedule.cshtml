@page
@model DentistBookingWebApp.Pages.Dentist.ScheduleModel
@{
    ViewData["Title"] = "Schedule";
}

<div class="wrapper px-3 py-5">
    <div class="section-title">
        <h2>Schedule</h2>
        <h3 class="my-2">Dentist: @ViewBag.DentistName</h3>
    </div>

    <div class="table-wrapper px-5">
        <table class="table table-striped table-bordered mydatatable">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Customer
                    </th>
                    <th>
                        Service
                    </th>
                    <th>
                        Date & Time
                    </th>
                    <th>
                        Status
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Reservations)
                {
                    <tr>
                        <td>
                            @item.Id
                        </td>
                        <td>
                            @item.Customer.FullName
                        </td>
                        <td>
                            @item.Service.Name
                        </td>
                        <td>
                            @item.ResevrationDate
                        </td>
                        <td>
                            @item.Status
                        </td>
                        <td>
                            <a asp-page="/Reservation/Details" asp-route-id="@item.Id">Detail</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Styles {
    <style>
        .section-title {
    text-align: center;
    padding-bottom: 20px;
}

    .section-title h2 {
        font-size: 28px;
        font-weight: bold;
        text-transform: uppercase;
        padding-bottom: 20px;
        position: relative;
    }

        .section-title h2::after {
            content: "";
            position: absolute;
            display: block;
            width: 50px;
            height: 3px;
            background: #0275d8;
            bottom: 0;
            left: calc(50% - 25px);
        }
    </style>
}

@section Scripts {
    <script>
        $(".mydatatable").DataTable();
    </script>
}