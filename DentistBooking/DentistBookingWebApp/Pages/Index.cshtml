@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!-- ======= Hero Section ======= -->
<section id="hero" class="d-flex align-items-center">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 pt-5 pt-lg-0 order-2 order-lg-1 d-flex flex-column justify-content-center">
                <h1>Convenient and simple way to take care your teeth</h1>
                <h2>We provide the online service to make appointments with our dentist.</h2>
                <div class="d-flex">
                    <a href="/Reservation/Index" class="btn-get-started scrollto">Make reservation</a>
                </div>
            </div>
            <div class="col-lg-6 order-1 order-lg-2 hero-img">
                <img src="https://firebasestorage.googleapis.com/v0/b/child-care-system-fa552.appspot.com/o/images%2Fcommon%2Fundraw_medicine_b-1-ol.svg?alt=media&token=cc7bdc53-ea08-4833-a002-11db48eeb809" class="img-fluid animated" alt="">
            </div>
        </div>
    </div>

</section><!-- End Hero -->
<!-- ======= Services Section ======= -->
<section id="services" class="services section-bg">
    <div class="container">
        <div class="section-title">
            <span>Services</span>
            <h2>Services</h2>
            <p>We want to bring our best services to customers.</p>
        </div>
        <div class="row">
            @if (Model.Services != null)
            {
                foreach (var item in Model.Services)
                {
                    <div class="col-lg-4 col-md-6 d-flex align-items-stretch service-item">
                        <img src="~/images/service/@item.Image" />
                        <div class="icon-box">
                            <h4>
                                <a asp-page="/Services/Details"
                           asp-route-id="@item.Id">
                                    @item.Name
                                </a>
                            </h4>
                            <div>@Html.Raw(item.Description)</div>
                        </div>
                    </div>
                }
            }
        </div>
        <a href="/Services/Index" class="float-right mt-3">View all services</a>
    </div>
</section><!-- End Services Section -->
@section Styles {
    <link href="@Url.Content("~/css/home/index.css")" rel="stylesheet" type="text/css" />
}

    @section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}

    <script type="text/javascript">
        window.onload = function() {
            if ('@TempData["Message"]' != "") {
                $.notify("@TempData["Message"]", { color: "#fff", background: "#20D67B" })
            }
            else if ('@TempData["ErrorMessage"]' != "") {
                $.notify("@TempData["ErrorMessage"]", { color: "#fff", background: "#D44950" })
            }
        }
    </script>