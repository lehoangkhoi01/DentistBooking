    <link href="@Url.Content("~/css/admin/dashboard.css")" rel="stylesheet" type="text/css" />
}*@
    @section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function onSubmitForm() {
            $("#adminForm").submit();
            $(".btn").prop("disabled", true);
        }
    </script>
    }