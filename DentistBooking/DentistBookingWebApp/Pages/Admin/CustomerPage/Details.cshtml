@page
@model DentistBookingWebApp.Pages.Admin.CustomerPage.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div>
        <h2 class="text-center">Account Information</h2>
        <h3 class="text-primary text-center">@Html.DisplayFor(model => model.Customer.FullName)</h3>
        <hr />
        <div class="row">
            <div class="col-3"></div>
            <div class="bg-light col-6 rounded pt-3">
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Customer.User.Email)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Customer.User.Email)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Customer.FullName)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Customer.FullName)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Customer.PhoneNumber)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Customer.PhoneNumber)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Customer.User.Role)
                    </dt>
                    <dd class="col-sm-8">
                        Customer
                    </dd>

                </dl>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-4"></div>
        <div class="text-center mt-5 col-4">
            <a asp-page="./Edit" asp-route-id="@Model.Customer.Id" class="btn btn-primary btn-block">Edit</a>
        </div>
    </div>

</div>
