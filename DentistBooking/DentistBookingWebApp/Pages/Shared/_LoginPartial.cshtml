@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<ul class="navbar-nav">
    @if (HttpContextAccessor.HttpContext.Session.GetString("EMAIL") != null)
    {
        @if (@HttpContextAccessor.HttpContext.Session.GetString("ROLE") == "2")
        {
            <li class="nav-item mr-3">
                <a class="nav-link" asp-page="/CustomerPage/Details" asp-route-id="">
                    @HttpContextAccessor.HttpContext.Session.GetString("EMAIL")
                </a>
            </li>
        }

        <li class="nav-item">
            <a asp-page="/Index" asp-page-handler="Logout">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-page="/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-page="/Login">Login</a>
        </li>
    }
</ul>
